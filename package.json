{
  "name": "spring-boot-starter-breuninger",
  "version": "2.0.0-m2-SNAPSHOT",
  "description": "Collection of independent libraries on top of Spring Boot to provide a faster setup of jvm microservices.",
  "scripts": {
    "dependency-update": "npm-check -E -u",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "commitmsg": "commitlint -e"
  },
  "lint-staged": {
    "{**/,}*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "{**/,}*.{css,scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:e-breuninger/spring-boot-starter-breuninger.git"
  },
  "devDependencies": {
    "@commitlint/cli": "7.0.0",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.0.1",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "npm-check": "5.7.1",
    "stylelint": "9.3.0"
  },
  "author": {
    "name": "Benedikt Stemmildt",
    "email": "benedikt@stemmildt.com",
    "url": "https://github.com/benestem"
  },
  "license": "Apache-2.0"
}
